<footer class="footer-section bg-dark py-5 mt-5">
    <div class="container">
        <div class="row">
            {% for block in section.blocks %}
                {% assign item = block.settings %}
                {% if block.type == "link_list" %}
                    <div class="col">
                        <h5>{{ item.title }}</h5>
                        {% assign footer_linklist = item.menu %}
                        {% if linklists[footer_linklist] %}
                            <ul class="list-unstyled text-small">
                                {% for link in linklists[footer_linklist].links %}
                                    <li>
                                        <a href="{{ link.url }}">{{ link.title | escape }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                {% elsif block.type == "text" %}
                    <div class="col">
                        {% if item.logo %}
                            <img src="{{ item.logo | img_url: 'medium' }}" class="mb-5" style="height: 120px;">
                        {% endif %}
                        <h5>{{ item.title }}</h5>
                        <p>{{ item.description }}</p>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</footer>

{{ 'bootstrap.min.js' | asset_url | script_tag }}
{{ 'application.js' | asset_url | script_tag }}


{% schema %}
    {
        "name": "footer",
        "settings": [
            {
                "type": "range",
                "id": "col_num",
                "default": 3,
                "min": 2,
                "max": 4,
                "label": "Number Of Columns",
                "step": 1
            }
        ],
        "max_blocks": 4,
        "blocks": [
            {
                "type": "link_list",
                "name": "Navigation",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "Quick Links"
                    },
                    {
                        "type": "link_list",
                        "id": "menu",
                        "label": "Menu"
                    }
                ]
            },
            {
                "type": "text",
                "name": "Store details",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "logo",
                        "label": "Store Logo"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Heading",
                        "default": "Store Information"
                    },
                    {
                        "type": "richtext",
                        "id": "description",
                        "label": "Description"
                    }
                ]
            }
        ]
    }
{% endschema %}