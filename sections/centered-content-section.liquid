<section class="inner-centered-content-section pb-4">
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.image.alt }}" style="max-width: 100vw; width: 100%; height: auto; position: top;" width="" height="">
    {% else %}
      {% assign placeholder = 'lifestyle-2' %}
      {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    <container class="d-flex flex-column align-items-center justify-content-center mt-2">
      <h2>{{ section.settings.title }}</h2>
      <h5>{{ section.settings.subtext }}</h5>
      <a href="{{ section.settings.button_link }}" class="btn btn-secondary pt-2">{{ section.settings.button_label }}</a>
    </container>
</section>




{% schema %}
{
  "name": "CenteredContentSection",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image Heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Section Title"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Section Subtext"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Heading Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Click me"
    }
  ],
  "presets": [
    {
      "name": "CenteredContentSection",
      "category": "Custom"
    }
  ]
}

{% endschema %}