<div class="container py-5 vh-100">
  <div class="contact-form shadow">
    {% include 'form-error', form: form %}
    {% form 'contact' %}
      <h1 class="font-bold text-center">{{ page.title }}</h1>
      {% if form.posted_successfully? %} Thank you for your contact {% endif %}
      <label for="ContactFormName">Name</label>
      <input type="text" id="ContactFormName" name="contact[name] " class="form-control rounded-0 mb-2">
      <label for="ContactFormEmail">Email</label>
      <input type="email" id="ContactFormEmail" name="contact[email]" class="form-control rounded-0 mb-2">
      <label for="ContactFormPhone">Phone Number</label>
      <input type="tel" id="ContactFormPhone" name="contact[phone]" class="form-control rounded-0 mb-2">
      <label for="ContactFormMessage">Message</label>
      <textarea rows="4 " id="ContactFormMessage" name="contact[body]" class="form-control rounded-0 mb-2"></textarea>
      <input type="submit" value="Send Message" class="btn btn-dark btn-lg w-100">
    {% endform %}
  </div>
</div>