<div class="container py-5 vh-80">
  <div class="contact-form shadow p-5 bg-white rounded-2">
    {% include 'form-error', form: form %}
    {% form 'contact' %}
      <h1 class="font-bold text-center">{{ page.title }}</h1>
      {% if form.posted_successfully? %} Thank you for your contact {% endif %}

      <div class="form-floating mb-2">
        <input type="text" id="ContactFormName" name="contact[name]" class="form-control rounded-0">
        <label for="ContactFormName">Name</label>
      </div>

      <div class="form-floating mb-2">
        <input type="email" id="ContactFormEmail" name="contact[email]" class="form-control rounded-0">
        <label for="ContactFormEmail">Email</label>
      </div>

      <div class="form-floating mb-2">
        <input type="tel" id="ContactFormPhone" name="contact[phone]" class="form-control rounded-0">
        <label for="ContactFormPhone">Phone Number</label>
      </div>

      <div class="form-floating mb-2">
        <textarea rows="4" id="ContactFormMessage" name="contact[body]" class="form-control rounded-0"></textarea>
        <label for="ContactFormMessage">Message</label>
      </div>

      <input type="submit" value="Send Message" class="btn btn-dark btn-lg w-100">
    {% endform %}
  </div>
</div>
