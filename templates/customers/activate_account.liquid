<!-- /templates/customers/activate_account.liquid -->
<div class="container my-5">
  <h1 class="lead">Activate Account</h1>
  <div class="row">
    {% form 'activate_customer_password' %}
      {% include 'form-error' , form %}
      <div class="col-12">
        <label for="activate_password1" class="form-label">Password</label>
        <input type="password" name="customer{password}" id="activate_password1" value="">
      </div>
      <div class="col-12">
        <label for="activate_password2" class="form-label">Confirm Password</label>
        <input type="password" name="customer{password_confirmation}" id="activate_password2" value="">
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-dark w-100 rounded-0">Activate Account</button>
      </div>
      <div class="col-12">
        <button type="submit" name="decline" class="btn btn-dark w-100 rounded-0">Decline Invitation</button>
      </div>
    {% endform %}
  </div>
</div>